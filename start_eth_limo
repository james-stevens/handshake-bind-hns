if ! test "${UWR_IP_ADDRESSES}"
	then
		echo "======= ERROR: 'UWR_IP_ADDRESSES' is not defined"
		sleep 5
		exit 1
	fi

exec /usr/local/bin/eth_limo.py -s -l -u "${UWR_IP_ADDRESSES}" 2>&1 | logger -t eth_limo
